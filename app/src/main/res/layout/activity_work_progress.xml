<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    tools:context=".WorkProgress">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_semibold"
        android:text="Working in Progress..."
        android:textColor="#000"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="370dp"
        android:layout_height="318dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="@color/colorPrimary"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.653">

        <ImageView
            android:id="@+id/uPic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            tools:srcCompat="@drawable/ic_baseline_person_24" />

        <TextView
            android:id="@+id/transactionId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_semibold"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="TextView"
            android:textColor="#000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/clientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_semibold"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="TextView"
            android:textColor="#000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/transDescript"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_semibold"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="TextView"
            android:textColor="#000"
            android:textSize="16dp" />

        <!--
        <TextView
            android:id="@+id/clientNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_semibold"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="TextView"
            android:textColor="#000"
            android:textSize="16dp" />
            -->

        <TextView
            android:id="@+id/clientAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_semibold"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="TextView"
            android:textColor="#000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/dateR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_semibold"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="TextView"
            android:textColor="#000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/transFee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_semibold"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="Transction Fee: Php 250"
            android:textColor="#000"
            android:textSize="16dp" />

    </LinearLayout>

    <Button
        android:fontFamily="@font/raleway_semibold"
        android:id="@+id/finishButton"
        android:layout_width="258dp"
        android:layout_height="48dp"
        android:text="Finish Job"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.168" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/loadingJob"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06"
        app:srcCompat="@drawable/repair" />

</androidx.constraintlayout.widget.ConstraintLayout>